---
import { ClientRouter } from 'astro:transitions'
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>esmantovi.ch</title>

    <ClientRouter />
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  p {
    text-wrap: pretty;
  }

  .overlay {
    pointer-events: none;

    position: fixed;
    z-index: -1;
    top: 0;
    left: 0;

    width: 100%;
    height: 100%;

    background-color: transparent;
  }

  .home-page {
    max-width: 1024px;
    margin: 0 auto;
    padding-right: 4%;
    padding-left: 4%;
  }

  a:hover {
    opacity: 0.87;
  }

  a:active {
    opacity: 0.3;
  }

  body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell,
      'Open Sans', 'Helvetica Neue', sans-serif;
    font-size: 18px;
    -webkit-font-smoothing: antialiased;
    color: rgb(29, 29, 31);
  }

  /* NOTE: Preview styling */
  #preview p {
    font-weight: 400;
    line-height: 1.47;
    color: grey;
    letter-spacing: -0.022em;
  }

  h2 {
    font-size: 1.5em;
  }

  h2,
  .clickable-header {
    margin-top: 3rem;
    margin-bottom: 16px;
  }

  .grid {
    display: grid;
    grid-template-columns: minmax(0, 1fr);
    gap: 20px;
    margin-bottom: 8px;
  }

  ::view-transition-old(root) {
    animation: blur-replace-out 0.2s ease-in-out forwards;
  }

  ::view-transition-new(root) {
    opacity: 0;
    animation: blur-replace-in 0.3s 0.1s forwards;
  }

  @media (width <= 1068px) {
    body {
      font-size: 16px;
    }
  }

  @media (width >= 430px) {
    .grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
      gap: 8px;
    }
  }

  @media (width >= 650px) {
    .grid {
      grid-template-columns: repeat(3, minmax(0, 1fr));
    }
  }

  @keyframes blur-replace-out {
    0% {
      opacity: 1;
      filter: blur(0px);
      mix-blend-mode: plus-lighter;
    }
    100% {
      opacity: 0;
      filter: blur(4px);
      mix-blend-mode: plus-lighter;
    }
  }

  @keyframes blur-replace-in {
    0% {
      opacity: 0;
      filter: blur(4px);
      mix-blend-mode: plus-lighter;
    }
    100% {
      opacity: 1;
      filter: blur(0px);
      mix-blend-mode: plus-lighter;
    }
  }
</style>
