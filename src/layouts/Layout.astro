---
import { ClientRouter } from 'astro:transitions'
import Navigation from '../components/Navigation.astro'

interface Props {
  navigationOpened?: boolean
}

const { navigationOpened = false } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>esmantovi.ch</title>

    <ClientRouter />
  </head>
  <body>
    <slot />
    {!navigationOpened && <div class="overlay" />}
  </body>
</html>

<style is:global>
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  .overlay {
    pointer-events: none;

    position: fixed;
    z-index: -1;
    top: 0;
    left: 0;

    width: 100%;
    height: 100%;

    background-color: transparent;

    view-transition-name: overlay;
  }

  .home-page {
    max-width: 1024px;
    margin: 0 auto;
    padding-right: 4%;
    padding-left: 4%;
  }

  body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell,
      'Open Sans', 'Helvetica Neue', sans-serif;
    font-size: 18px;
    -webkit-font-smoothing: antialiased;
    color: rgb(29, 29, 31);
  }

  /* NOTE: Preview styling */
  #preview p {
    font-size: 17px;
    font-weight: 400;
    line-height: 1.47;
    color: grey;
    letter-spacing: -0.022em;
  }

  h2 {
    margin-top: 2.5em;
    margin-bottom: 0.8em;
    font-size: 1.5em;
  }

  .grid {
    display: grid;
    grid-template-columns: minmax(0, 1fr);
    gap: 20px;
    margin-bottom: 8px;
  }

  /* NOTE: Disable root view transitions */
  ::view-transition-group(root) {
    animation: none;
  }
  ::view-transition-old(root) {
    animation: none;
  }
  ::view-transition-new(root) {
    animation: none;
  }

  ::view-transition-group(overlay) {
    animation-duration: 0.3s;
  }

  ::view-transition-group(navigation-content) {
    z-index: 10000;
  }

  ::view-transition-old(navigation-content) {
    animation: navigation-content-disappear 0.4s ease-out forwards;
  }

  ::view-transition-new(navigation-content) {
    opacity: 0.5;
    animation: navigation-content-appear 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94) forwards;
  }

  @media (max-width: 1068px) {
    body {
      font-size: 16px;
    }
  }

  @media (min-width: 430px) {
    .grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
      gap: 8px;
    }
  }

  @media (min-width: 650px) {
    .grid {
      grid-template-columns: repeat(3, minmax(0, 1fr));
    }
  }

  @keyframes blur-replace-out {
    0% {
      opacity: 1;
      filter: blur(0px);
      mix-blend-mode: plus-lighter;
    }
    100% {
      opacity: 0;
      filter: blur(4px);
      mix-blend-mode: plus-lighter;
    }
  }

  @keyframes blur-replace-in {
    0% {
      opacity: 0;
      filter: blur(4px);
      mix-blend-mode: plus-lighter;
    }
    100% {
      opacity: 1;
      filter: blur(0px);
      mix-blend-mode: plus-lighter;
    }
  }

  @keyframes navigation-content-appear {
    0% {
      opacity: 0.5;
      filter: blur(20px);
      mix-blend-mode: plus-lighter;
    }
    65% {
      filter: blur(10px);
    }
    100% {
      opacity: 1;
      filter: blur(0px);
      mix-blend-mode: plus-lighter;
    }
  }

  @keyframes navigation-content-disappear {
    0% {
      opacity: 1;
      filter: blur(0px);
      mix-blend-mode: plus-lighter;
    }

    100% {
      opacity: 0.5;
      filter: blur(20px);
      mix-blend-mode: plus-lighter;
    }
  }
</style>
