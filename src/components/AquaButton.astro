---
// Define the props interface for type safety
interface Props {
  text: string
  color: 'blue' | 'gray'
  id?: string
}

// Destructure the title prop
const { text, color, id } = Astro.props
---

<button id={id} class:list={['aqua-button', color === 'blue' ? 'blue' : 'gray']}>{text}</button>

<style>
  .aqua-button {
    will-change: transform;
    cursor: pointer;

    position: relative;
    transform-origin: center;

    margin-top: 1.5rem;
    padding: 0.3rem 2rem;
    border: 1px solid #ccc;
    border-radius: 125px;

    font-size: 1rem;
    font-weight: 500;

    -webkit-appearance: none;
    backface-visibility: hidden;
    box-shadow:
      inset 0 13px 25px rgba(255, 255, 255, 0.5),
      0 3px 5px rgba(0, 0, 0, 0.2),
      0 10px 13px rgba(0, 0, 0, 0.1);

    transition: all ease 0.3s;
  }
  .aqua-button:hover {
    transform: scale(1.02);
    box-shadow:
      inset 0 13px 25px rgba(255, 255, 255, 0.8),
      0 3px 5px rgba(0, 0, 0, 0.2),
      0 10px 13px rgba(0, 0, 0, 0.2);
  }
  .aqua-button:before {
    content: '';

    position: absolute;
    top: 1px;
    left: 4%;

    width: 92%;
    height: 68%;
    border-radius: 125px;

    background: linear-gradient(rgba(255, 255, 255, 1) 0%, rgba(255, 255, 255, 0) 100%);

    transition: all ease 0.3s;
  }

  .aqua-button.blue {
    border-color: #077aff;
    color: #ebebeb;
    background: #077aff;
  }

  .aqua-button.gray {
    border-color: #b8b8b8;
    color: #2f2f2f;
    background: #d0d0d0;
  }
</style>
